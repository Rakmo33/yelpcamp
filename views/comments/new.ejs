<%- include("../partials/header") %>
<div class="row">
    <h1 style="text-align: center;">Add a new Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">

        <form action="/campgrounds/<%= campground.slug%>/comments" method="POST">


            <div class="form-group">
                <textarea class="form-control" name="comment[text]" placeholder="Comment text here..." cols="30"
                    rows="10"></textarea>

            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">
                    Submit!
                </button>
            </div>
        </form>

        <a href="/campgrounds/<%= campground.slug%>">Go back!</a>

    </div>

</div>

<%- include("../partials/footer") %>